{
  // Use this file to configure the VS Code debugger and Run/Debug entries.
  // This configuration launches the project's parsing script with the
  // requested command-line arguments and runs it in the integrated
  // terminal so you can interact with it.
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Run parse_and_chunk.py on pdf",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/code/parse_and_chunk.py",
      "console": "integratedTerminal",
      "args": [
        "--input",
        "${workspaceFolder}/data/raw/papers/2020.emnlp-main.550.pdf",
        "--out",
        "${workspaceFolder}/data/processed/example_pdf.jsonl"
      ],
      "cwd": "${workspaceFolder}",
      "env": {},
      "justMyCode": true
    },
    {
        "name": "Python: Run parse_and_chunk.py on 2 articles",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/code/parse_and_chunk.py",
        "console": "integratedTerminal",
        "args": [
            "--input",
            "${workspaceFolder}/data/raw/test_rag_articles.tsv",
            "--out",
            "${workspaceFolder}/data/processed/example_articles.jsonl"
        ],
        "cwd": "${workspaceFolder}",
        "env": {},
        "justMyCode": true
    },
    {
        "name": "Python: Run parse_and_chunk.py on all articles",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/code/parse_and_chunk.py",
        "console": "integratedTerminal",
        "args": [
            "--input",
            "${workspaceFolder}/data/raw/rag_articles.tsv",
            "--out",
            "${workspaceFolder}/data/processed/all_articles.jsonl"
        ],
        "cwd": "${workspaceFolder}",
        "env": {},
        "justMyCode": true
    }
  ]
}
